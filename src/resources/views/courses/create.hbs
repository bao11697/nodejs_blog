<div class="mt-4">
   <h3>Đăng Khóa học</h3>
    <form class = "mt-4" method="POST" action="/courses/store">
            <div class="form-group">
                <label for="name" >Tên Khóa Học</label>
                <input type="text" class="form-control" id="name" name="name">
            </div>

             <div class="form-group">
                <label for="description" >Mô Tả Chi Tiết</label>
                <input type="text" class="form-control" id="description" name="description">
            </div>

             <div class="form-group">
                <label for="videoId" > ID Video</label>
                <input type="text" class="form-control" id="videoId" name="videoId">
            </div>
            <div class="form-group">
                <label for="level" > Trình Độ </label>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="level" id="level"  value="Trình Độ Cơ Bản " checked>
                <label class="form-check-label" for="level">
                    Trình Độ Cơ Bản
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="level" id="level"  value="Trình Dộ Trung Bình">
                <label class="form-check-label" for="level">
                    Trình Độ Trung Bình
                </label>    
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="level" id="level"  value="Trình Độ Cao">
                <label class="form-check-label" for="level">
                   Trình Độ Cao
                </label>    
            </div>
          
            </div>
           <button type="submit" class="btn btn-primary">Thêm Khóa Học</button>
    </form>

</div>